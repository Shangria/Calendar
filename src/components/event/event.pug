.create-event
    .create-event__data-container
        .create-event__box
            .create-event__data-title Name of the even:
            input(type='text')
        .create-event__box
            .create-event__data-title Participants:
            select.create-event_list-participants
                option(value='All members') All members
                option(value='Maria') Maria
                option(value='Bob') Bob
                option(value='Alex') Alex
        .create-event__box
            .create-event__data-title Day:
            select.create-event_list-days
                option(value='Monday') Monday
                option(value='Tuesday') Tuesday
                option(value='Wednesday') Wednesday
                option(value='Thursday') Thursday
                option(value='Friday') Friday
        .create-event__box
            .create-event__data-title Time:
            select.create-event_list-days
                option(value='10:00') 10:00
                option(value='11:00') 11:00
                option(value='12:00') 12:00
                option(value='13:00') 13:00
                option(value='14:00') 14:00
                option(value='15:00') 15:00
                option(value='16:00') 16:00
                option(value='17:00') 17:00
                option(value='18:00') 18:00
    .create-event__box-button
        .create-event__button Cancel
        .create-event__button Create
